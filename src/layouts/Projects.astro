---
import CodeIcon from '../components/icons/Code.astro'
import ProjectsArray from '../data/Projects.json'
---

<section class='w-full flex flex-col px-28' id='projects'>
  <h2 class='flex text-3xl items-center mb-6 gap-1'>
    <CodeIcon class='size-8' /> Projects
  </h2>
  <article class='flex flex-col'>
    {
      ProjectsArray.map((pro) => (
        <div class='flex gap-2'>
          <div class='w-1/2'>
            <img class='' src={pro.image} alt={pro.link} />
          </div>

          <div class='flex flex-col w-1/2'>
            <h3 class='text-2xl'>{pro.title}</h3>
            <p class='text-lg'>{pro.description}</p>
          </div>
        </div>
      ))
    }
  </article>
</section>
